<main>
    <h1>{{currCube.name}}</h1>
    <img class="cube" src="{{currCube.imageUrl}}">
    <div class="details">
        <p><span>Description:</span> {{currCube.description}}</p>
        <p><span>Difficulty level:</span> {{currCube.difficultyLevel}}</p>
        <a class="btn" href="/">Back</a>
        {{#if isOwner}}
        <a class="btn" href="/cubes/{{currCube._id}}/attach-accessory">Attach</a>
        <a class="btn" href="/cubes/{{currCube._id}}/edit">Edit</a>
        <a class="btn" href="/cubes/{{currCube._id}}/delete">Delete</a>
        {{/if}}
    </div>
    <h2>Accessories</h2>
    <div class="accessories">
        {{#each currCube.accessories}}
        <div class="accessory">
            <img src="{{imageUrl}}" alt="{{name}}">
            <h3>{{name}}</h3>
            <p>{{description}}</p>
        </div>
        {{else}}
        <h3 class="italic">This cube has no accessories yet...</h3>
        {{/each}}
    </div>
</main>