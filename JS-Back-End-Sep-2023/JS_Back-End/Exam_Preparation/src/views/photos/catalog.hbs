<main>
    <div class="container">
        <div class="col-9">

            <div class="card">
                <div class="top">
                    <div class="userDetails">
                        <!-- Link to User Profile Page -->
                        <a href="#" action="#" method="#">
                            <div class="profilepic">
                                <div class="profile_img">
                                    <div class="image">
                                        <img src="/images/person.png">
                                    </div>
                                </div>
                            </div>
                        </a>
                        <h3>
                            <!-- Link to User Profile Page -->
                            <p>
                                <!-- show user username -->
                                MayaB
                            </p>
                            <!-- photo's location -->
                            <span>Bansko, Bulgaria</span>
                        </h3>
                    </div>
                </div>

                <!-- Start Pet Photo -->
                <div class="imgBx">
                    <img src="/images/axolotl.jpeg" alt="post" class="cover">
                </div>
                <!-- Name of Pet -->
                <h5 class="petName">Name: Sal</h5>
                <!-- Age of Pet -->
                <h5 class="petAge">Age: 4</h5>
                <!-- Link to Photo Details Page -->
                <a href="#" id="see-details">
                    <h4 class="details">See details</h4>
                </a>
            </div>

            {{#each photos}}
                {{>petCard}}
            {{else}}
            <!--If there are no photo yet!-->
            <article class="not-available-photo">
                <h1>No photo posts yet.</h1>
            </article>
            {{/each}}
        </div>

    </div>
</main>