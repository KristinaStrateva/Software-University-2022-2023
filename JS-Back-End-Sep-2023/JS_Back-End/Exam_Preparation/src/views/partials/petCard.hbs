<div class="card">
    <div class="top">
        <!-- User Details and image location -->
        <div class="userDetails">
            <div>
                <div class="profilepic">
                    <div class="profile_img">
                        <div class="image">
                            <img src="/images/person.png" alt="img8">
                        </div>
                    </div>
                </div>
            </div>
            <h3>
                <p>
                    <!-- if user's username -->
                    {{owner.username}}
                    <br>
                    <!-- photo's location -->
                    <span>{{location}}</span>
                </p>

            </h3>
        </div>

    </div>
    <!-- Post image -->
    <div class="imgBx" id="{{_id}}">
        <img src="{{imageUrl}}" alt="{{name}}" class="cover">
    </div>
    <!-- Name of Pet -->
    <h5 class="petName">Name: {{name}}</h5>
    <!-- Age of Pet -->
    <h5 class="petAge">Age: {{age}}</h5>
    <!-- Link to Photo Details Page -->
    <a href="/photos/catalog/{{_id}}/details" id="see-details">
        <h4 class="details">See details</h4>
    </a>
</div>