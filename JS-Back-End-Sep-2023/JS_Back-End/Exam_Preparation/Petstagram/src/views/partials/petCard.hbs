<div class="card">
    <div class="top">
        <div class="userDetails">
            {{#unless isAuthenticated}}
            <a href="/users/{{owner._id}}/profile" alt="user img">
                <div class="profilepic">
                    <div class="profile_img">
                        <div class="image">
                            <img src="/images/person.png" alt="img8">
                        </div>
                    </div>
                </div>
            </a>
            {{else}}
            <div>
                <div class="profilepic">
                    <div class="profile_img">
                        <div class="image">
                            <img src="/images/person.png" alt="img8">
                        </div>
                    </div>
                </div>
            </div>
            {{/unless}}
            <h3>
                <p>
                    {{owner.username}}
                    <br>
                    <span>{{location}}</span>
                </p>
            </h3>
        </div>
    </div>
    <div class="imgBx" id="{{_id}}">
        <img src="{{imageUrl}}" alt="{{name}}" class="cover">
    </div>
    <h5 class="petName">Name: {{name}}</h5>
    <h5 class="petAge">Age: {{age}}</h5>
    <a href="/photos/catalog/{{_id}}/details" id="see-details">
        <h4 class="details">See details</h4>
    </a>
</div>